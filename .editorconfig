root=true

[*]
charset=utf-8
end_of_line=lf
indent_size=4
indent_style=space
insert_final_newline=true
max_line_length=120
tab_width=4
trim_trailing_whitespace=true

[{*.kts,*.kt}]
indent_size=4
tab_width=4
max_line_length=off
ij_kotlin_allow_trailing_comma=false
ij_kotlin_allow_trailing_comma_on_call_site=false
ktlint_standard_multiline-if-else=disabled

[{*.yml,*.yaml}]
indent_size=2
